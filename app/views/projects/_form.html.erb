<div id="new_project_form_wrapper">
	<div id="arrow"></div>
	<%= form_for(@project) do |f| %>
		<%= f.label :project_name %>
		<br />
		<%= f.text_field :project_name, :id => 'project_name_txt' %>
	
		<br />
		<br />
		<%= f.label :project_description %>
		<br />
		<%= f.text_area :project_description, :size => '28x8', :id => 'project_desc_txt', :maxlength => "300" %>
		<br />
		<span>*300 characters max</span>
		<span id="char_right"><span>You have </span><strong><span id="char_left">300</span></strong><span> characters left</span></span>

		<br />
		<br />

		<%= f.submit %>
	<% end %>
</div>