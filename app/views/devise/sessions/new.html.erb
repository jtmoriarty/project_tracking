<div id="log-in-wrapper">
	<div>
		<h2 id="sign-in-heading">Project Manager</h2>
	</div>

	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  		<div id="email-txt-wrap">
  			<%= f.label :email %><br />
  			<%= f.email_field :email, :id => 'email-txt-field', :autofocus => true %>
  		</div>

  		<div id="password-txt-wrap">
  			<%= f.label :password %><br />
  			<%= f.password_field :password, :id => 'password-txt-field' %>
  		</div>

  		<% if devise_mapping.rememberable? -%>
    		<div id="remember-me-wrap">
    			<%= f.check_box :remember_me %><%= f.label :remember_me, :id => 'remember_me_label' %>
    		</div>
  		<% end -%>

 		<div>
  			<%= f.submit "Sign in", :id => 'sign-in-btn' %>
  		</div>
	<% end %>

	<%= render "devise/shared/links" %>
</div>